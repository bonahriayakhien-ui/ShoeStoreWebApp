@model ShoeStoreWebApp.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Product";
}

<section class="admin-form-wrapper">

    <div class="admin-form-card">

        <h2 class="admin-form-title">Chỉnh sửa sản phẩm</h2>
        <p class="admin-form-subtitle">
            Cập nhật thông tin sản phẩm trong hệ thống
        </p>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="form-label">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control luxury-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Giá (VNĐ)</label>
                <input asp-for="Price" class="form-control luxury-input" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Description"
                          class="form-control luxury-input"
                          rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Danh mục</label>
                <select asp-for="CategoryId"
                        class="form-select luxury-input"
                        asp-items="@(new SelectList(ViewBag.CategoryId, "Id", "Name"))">
                    <option value="0">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Ảnh hiện tại -->
            <div class="mb-4">
                <label class="form-label">Ảnh hiện tại</label>
                <div class="current-image-box">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product image" />
                    }
                    else
                    {
                        <span class="text-muted">Chưa có ảnh</span>
                    }
                </div>
            </div>

            <!-- Upload ảnh mới -->
            <div class="form-group mb-4">
                <label class="form-label">Đổi ảnh mới</label>
                <input type="file"
                       name="ImageFile"
                       class="form-control luxury-input"
                       accept="image/*" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn luxury-btn-primary">
                    Lưu thay đổi
                </button>

                <a asp-action="Index" class="btn luxury-btn-secondary">
                    Quay lại
                </a>
            </div>

        </form>

    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
