@model IEnumerable<ShoeStoreWebApp.Models.Product>

<section class="admin-table-wrapper">

    <div class="admin-table-header d-flex justify-content-between align-items-center">
        <h2>Quản lý sản phẩm</h2>

        <a asp-area="Admin"
           asp-controller="Product"
           asp-action="Create"
           class="btn luxury-btn-primary">
            + Thêm sản phẩm
        </a>
    </div>

    <div class="admin-table-card">
        <table class="table luxury-table">
            <thead>
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Tên sản phẩm</th>
                    <th style="width:140px;">Giá</th>
                    <th>Danh mục</th>
                    <th style="width:180px;">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("N0") ₫</td>
                        <td>@item.Category?.Name</td>
                        <td>
                            <a asp-area="Admin"
                               asp-controller="Product"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn luxury-btn-secondary btn-sm">
                                Sửa
                            </a>

                            <a asp-area="Admin"
                               asp-controller="Product"
                               asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn luxury-btn-danger btn-sm ms-1">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>
