@model ShoeStoreWebApp.Models.Product

<div class="container luxury-container mt-5">
    <div class="row align-items-start product-detail-card">

        <!-- IMAGE -->
        <div class="col-md-5 mb-4">
            <div class="product-detail-image">
                <img src="@Model.ImageUrl"
                     alt="@Model.Name"
                     class="img-fluid" />
            </div>
        </div>

        <!-- INFO -->
        <div class="col-md-7">
            <h2 class="product-title">@Model.Name</h2>

            <div class="product-price">
                @Model.Price.ToString("N0") ₫
            </div>

            <div class="product-category">
                Danh mục:
                <span>@Model.Category?.Name</span>
            </div>

            <hr class="luxury-divider" />

            <h5 class="product-desc-title">Mô tả sản phẩm</h5>
            <p class="product-description">
                @(!string.IsNullOrEmpty(Model.Description)
                                ? Model.Description
                                : "Sản phẩm hiện chưa có mô tả cụ thể.")
            </p>

            <!-- ACTION -->
            <div class="product-actions mt-4">
                <a asp-controller="Shop"
                   asp-action="Index"
                   class="luxury-btn-secondary">
                    ⬅ Quay lại
                </a>

                <a asp-controller="Cart"
                   asp-action="AddToCart"
                   asp-route-id="@Model.Id"
                   class="luxury-btn-primary ms-2">
                    🛒 Thêm vào giỏ hàng
                </a>
            </div>
        </div>

    </div>
</div>

<!-- ================= COMMENTS ================= -->
<div class="container mt-5">
    <h4>💬 Đánh giá & Bình luận</h4>

    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments
            .Where(c => c.ParentCommentId == null)
            .OrderByDescending(c => c.CreatedAt))
        {
            <div class="border rounded p-3 mb-3">

                <!-- USER + TIME -->
                <div class="d-flex justify-content-between">
                    <strong>@comment.User?.Email</strong>
                    <small class="text-muted">
                        @comment.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>

                <!-- ⭐ RATING -->
                <div class="mb-1">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="@(i <= comment.Rating ? "text-warning" : "text-muted")">★</span>
                    }
                </div>

                <!-- CONTENT -->
                <p class="mt-2">@comment.Content</p>

                <!-- ❌ DELETE COMMENT -->
                @if (User.Identity.IsAuthenticated &&
                     (User.IsInRole("Admin") ||
                      comment.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
                {
                    <form asp-action="DeleteComment"
                          method="post"
                          class="d-inline">
                        <input type="hidden" name="id" value="@comment.Id" />
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Xóa bình luận này?')">
                            ❌ Xóa
                        </button>
                    </form>
                }

                <!-- 🔁 REPLY COMMENT -->
                @if (User.Identity.IsAuthenticated)
                {
                    <button type="button"
                            class="btn btn-sm btn-link p-0 ms-2"
                            onclick="toggleReply('reply-@comment.Id')">
                        Trả lời
                    </button>

                    <div id="reply-@comment.Id" class="ms-4 mt-2 d-none">
                        <div class="text-muted small mb-1">
                            👉 Bạn đang trả lời <strong>@comment.User?.Email</strong>
                        </div>

                        <form asp-action="AddComment" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <input type="hidden" name="parentCommentId" value="@comment.Id" />
                            <input type="hidden" name="rating" value="5" />

                            <textarea name="content"
                                      class="form-control mb-2"
                                      rows="2"
                                      placeholder="Nhập trả lời..."
                                      required></textarea>

                            <button class="btn btn-sm btn-primary">
                                Gửi trả lời
                            </button>
                        </form>
                    </div>
                }

                <!-- ================= REPLIES ================= -->
                @if (comment.Replies != null && comment.Replies.Any())
                {
                    foreach (var reply in comment.Replies.OrderBy(r => r.CreatedAt))
                    {
                        <div class="ms-4 mt-3 p-2 bg-light rounded">

                            <div class="d-flex justify-content-between">
                                <strong>@reply.User?.Email</strong>
                                <small class="text-muted">
                                    @reply.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>

                            <p class="mb-1">@reply.Content</p>

                            <!-- ❌ DELETE REPLY -->
                            @if (User.Identity.IsAuthenticated &&
                                 (User.IsInRole("Admin") ||
                                  reply.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
                            {
                                <form asp-action="DeleteComment"
                                      method="post"
                                      class="d-inline">
                                    <input type="hidden" name="id" value="@reply.Id" />
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Xóa trả lời này?')">
                                        ❌
                                    </button>
                                </form>
                            }

                            <!-- 🔁 REPLY TO REPLY -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button type="button"
                                        class="btn btn-sm btn-link p-0 ms-2"
                                        onclick="toggleReply('reply-reply-@reply.Id')">
                                    Trả lời
                                </button>

                                <div id="reply-reply-@reply.Id" class="ms-3 mt-2 d-none">
                                    <div class="text-muted small mb-1">
                                        👉 Bạn đang trả lời <strong>@reply.User?.Email</strong>
                                    </div>

                                    <form asp-action="AddComment" method="post">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <!-- QUAN TRỌNG: gắn về comment gốc -->
                                        <input type="hidden" name="parentCommentId" value="@comment.Id" />
                                        <input type="hidden" name="rating" value="5" />

                                        <textarea name="content"
                                                  class="form-control mb-2"
                                                  rows="2"
                                                  placeholder="Trả lời @reply.User?.Email..."
                                                  required></textarea>

                                        <button class="btn btn-sm btn-primary">
                                            Gửi
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                }
            </div>
        }
    }
    else
    {
        <p class="text-muted">Chưa có bình luận nào.</p>
    }

    <hr />
    <!-- ================= ADD COMMENT ================= -->
    @if (User.Identity.IsAuthenticated)
    {
        <h5>✍️ Viết đánh giá</h5>

        <form asp-action="AddComment" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />

            <select name="rating" class="form-select mb-2" required>
                <option value="">-- Chọn sao --</option>
                <option value="5">⭐⭐⭐⭐⭐</option>
                <option value="4">⭐⭐⭐⭐</option>
                <option value="3">⭐⭐⭐</option>
                <option value="2">⭐⭐</option>
                <option value="1">⭐</option>
            </select>

            <textarea name="content"
                      class="form-control mb-2"
                      rows="3"
                      placeholder="Nhận xét của bạn..."
                      required></textarea>

            <button class="btn btn-success">
                Gửi đánh giá
            </button>
        </form>
    }
    else
    {
        <p class="text-warning">
            👉 Vui lòng
            <a asp-area="Identity" asp-page="/Account/Login">đăng nhập</a>
            để bình luận.
        </p>
    }
</div>

<script>
    function toggleReply(id) {
        const el = document.getElementById(id);
        if (el) {
            el.classList.toggle("d-none");
        }
    }
</script>
